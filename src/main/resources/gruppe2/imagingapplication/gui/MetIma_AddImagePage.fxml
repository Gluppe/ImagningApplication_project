<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppe2.imagingapplication.gui.AddImagePageController">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image preview" />
                  <ImageView fx:id="imagePreview" fitHeight="428.0" fitWidth="719.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnHome" text="home page" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnGallery" text="view gallery" />
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <right>
      <VBox alignment="CENTER" prefHeight="252.0" prefWidth="301.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" fillHeight="false" spacing="20.0" VBox.vgrow="NEVER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#chooseFile" text="Choose Image" />
                        <Text fx:id="selectedFileText" strokeType="OUTSIDE" strokeWidth="0.0" text="No image selected" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image Name" />
                  <TextField fx:id="txtFileName" prefHeight="45.0" prefWidth="132.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tags (No spaces, separate with commas)" />
                  <TextField fx:id="txtTags" prefHeight="45.0" prefWidth="173.0" />
                  <Button fx:id="btnAddImage" mnemonicParsing="false" onAction="#addImage" prefHeight="45.0" prefWidth="87.0" text="add" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
